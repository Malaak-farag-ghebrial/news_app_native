<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">


    <fragment
        android:id="@id/favorite"
        android:name="com.example.netowrk_training.ui.fragments.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite"
        >
        <action
            android:id="@+id/action_favoriteFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment
>
    <fragment
        android:id="@id/search"
        android:name="com.example.netowrk_training.ui.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search"
        >
        <action
            android:id="@+id/action_searchFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@id/home"
        android:name="com.example.netowrk_training.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home"
         >
        <action
            android:id="@+id/action_homeFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.example.netowrk_training.ui.fragments.ArticleFragment"
        android:label="fragment_article"
        tools:layout="@layout/fragment_article"
        >
        <argument
            android:name="article"
            app:argType="com.example.netowrk_training.models.Article"
            app:nullable="false"
            />


    </fragment>
</navigation>